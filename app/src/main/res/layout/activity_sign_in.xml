<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9deff"
    tools:context=".Sign.SignInActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="192dp"
        android:layout_height="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/starter" />
    <TextView
        android:id="@+id/apptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="10dp"
        android:text="@string/cinema_app"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="32sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="20dp"
        android:background="#000"
        android:layout_marginTop="20dp"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        android:text="SignIn"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="32sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="Email"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="17sp"/>

        <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
            android:layout_marginTop="10dp"
        android:hint="E-mail"
            android:background="@drawable/edittextshadowlayout"
          android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
        android:textColorHint="#666565"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginHorizontal="20dp"
            android:id="@+id/SignInEmail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="17sp"/>
        <EditText
            android:textColor="#000"
            android:background="@drawable/edittextshadowlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Password"
            android:id="@+id/SignInPassword"
            android:textColorHint="#666565"
             android:textSize="15sp"
             android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPassword"
            />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:id="@+id/SignInBtn2"
        android:text="Sign In"
        android:background="#dc79ff"
        />

</LinearLayout>